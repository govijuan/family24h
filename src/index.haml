            %span.fone &nbsp;3386-8181

        .message.col-xs-6.col-sm-6.col-md-6.col-lg-6
          %p Ou, por email
          %form
            .field.col-xs-12.col-sm-12.col-md-6.col-lg-6
              %label(for="name") Nome 
                %span *
              %input(type="text" name="name" id="name")

            .field.col-xs-12.col-sm-12.col-md-6.col-lg-6
              %label(for="email") Email 
                %span *
              %input(type="text" name="email" id="email")

            .field.col-xs-12.col-sm-12.col-md-12.col-lg-12
              %label(for="") Mensagem (máximo 300 caracteres)
                %span *
              %textarea

            %button(type="button" class="btn btn-lg") Enviar Mensagem

