include layout/header_interna.jade

section.main
  .container
    .col-xs-12.col-sm-10.col-md-8.col-lg-6.col-sm-offset-1.col-md-offset-2.col-lg-offset-3
      .title
        h3.title__header Login
        small.title__tagline Bem vindo ao Family24h

      form(name="login_form")
        .form__field
          label(for="password") Senha
          input.form__input(type="password" name="password" id="password")

        .form__field
          label(for="password_confirmP") Confirmar senha
          small(class="password_return")
          input.form__input(type="password" name="password_confirm" id="password_confirm")


        .form__field
          button.form__button(type="button" class="btn btn-lg btn-block" onclick="passwordChange()") Prosseguir

include scripts.jade

script(src="scripts/login/login.js")