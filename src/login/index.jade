include ../layout/header_interna.jade

section.main(ng-controller="loginCtrl")
  .container
    .col-xs-12.col-sm-10.col-md-8.col-lg-6.col-sm-offset-1.col-md-offset-2.col-lg-offset-3
      .title
        h3.title__header Login
        small.title__tagline Bem vindo ao Family24h

      form(name="login_form" ng-submit="onSubmit()" novalidate="novalidate")
        .form__field
          label(for="email") Email
          small(class="email_return")
          input.form__input(type="email" 
                            name="email" 
                            id="email" 
                            ng-model="formModel.email"
                            required)

        .form__field
          label(for="password") Senha
          small(class="password_return")
          input.form__input(type="password" 
                            name="password" 
                            id="password" 
                            ng-model="formModel.password"
                            required)

        .form__field
          input(type="checkbox" name="remember" id="remember")
          label(for="remember") Mantenha-me conectado

          a(href="#") Esqueci minha senha

        .form__field
          button.form__button(type="submit" class="btn btn-lg btn-block") Entrar

      //- pre {{ login_form | json }}
include ../scripts.jade

