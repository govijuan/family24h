include ../layout/header.jade

.dashboard(role="main")

  section.content
    #flash.alert(role="alert")
      .message
      button(type="button" class="close" aria-label="Close")
        span(aria-hidden="true") &times;

    .button__bar
      .buttons
        a.lock(href="#" onclick="displayModal('lock');")
          img(src="/images/ic_phonelink_lock_black_48px.svg")
          p Mark as stolen

        a.ring(href="#" onclick="displayModal('ring');")
          img(src="/images/ic_speaker_phone_black_48px.svg")
          p Ring

        a.wipe(href="#" onclick="displayModal('wipe');")
          img(src="/images/ic_phonelink_erase_black_48px.svg")
          p Wipe

    #mapdiv

    .modal.fade(id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
      .modal-dialog(role="document")
        .modal-content
          .modal-header
            button.close(data-dismiss="modal" aria-label="Close")
              .span(aria-hidden="true") &times;
            h4.modal-title(id="myModalLabel") Modal title
          .modal-body
            #flash-modal.alert(role="alert")
              .message
              button(type="button" class="close" aria-label="Close")
                span(aria-hidden="true") &times;
            .row
              .col-sm-3.col-xs-12.text-center
                .avatar
                  img(src="")
              .col-sm-9.col-xs-12
                p This will ring your phone for 15 seconds
          .modal-footer
            button.btn.btn-primary Ring

include ../scripts.jade

